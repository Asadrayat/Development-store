    color: #000;
    font-weight: 700;
    margin: 0 0 12px 0;
  }
  .info__desc {
    font-family: var(--font-body-family);
    font-weight: 300;
    font-size: 14px;
    line-height: 110%;
    letter-spacing: -0.01em;
    margin-top: 12px;
  }
  .close__icon-wrap {
      position: absolute;
      top: 12px;
      right: 12px;
      cursor: pointer;
