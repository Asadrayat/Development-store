<style>
  .heading-{{ id }} {
     margin: 0 0 50px 0;
  }
  .heading-{{ id }} h2 {
    font-size: 36px;
    line-height: 120%;
    margin: 0;
    font-family: auto;
  }
  .wrapper-{{ id }} {
    display: grid;
    grid-template-columns: repeat(3, minmax(100px, 1fr));
    gap: 20px;
    align-items: center;
    position: relative;
    @media(max-width: 768px){
      grid-template-columns: 1fr 1fr;
    }
  }
  .wrapper-{{ id }} .feature__img{
    width: 100%;
    height: auto;
    object-fit: cover;
    aspect-ratio: 1.1;
